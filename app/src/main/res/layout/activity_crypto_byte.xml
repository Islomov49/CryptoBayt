<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clickable="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/abc_action_bar_default_height_material"
            android:background="#0397DA"></FrameLayout>

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/forgone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/three_hundred_dp"
                        android:background="#0397DA"

                        />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/three_hundred_dp"

                        android:scaleType="centerCrop"
                        android:src="@drawable/zalivka" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/two_hundred_twenty_dp"
                        android:layout_marginLeft="@dimen/fifty_dp"
                        android:layout_marginRight="@dimen/fifty_dp"
                        android:adjustViewBounds="true"
                        android:padding="@dimen/twenty_dp"
                        android:src="@drawable/solid" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/three_hundred_dp"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:scaleType="centerCrop" />


                    <ImageView
                        android:id="@+id/ortaa"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sixty_dp"
                        android:layout_marginTop="@dimen/two_hundred_seventy_dp"
                        android:background="@drawable/oval"
                        android:scaleType="fitXY" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/three_hundred_dp"

                        android:orientation="vertical"
                        android:paddingTop="@dimen/sixteen_dp">

                        <TextView
                            android:id="@+id/tvIntroTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/sixteen_dp"
                            android:layout_marginRight="@dimen/sixteen_dp"
                            android:gravity="center"
                            android:text="Enter the room"
                            android:textColor="#03a9f4"
                            android:textSize="@dimen/twenty_four_dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/llEmail"
                            android:layout_width="@dimen/two_hundred_fifty_dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/sixteen_dp"
                            android:background="@drawable/edit_text_color_pr_strike"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/twenty_five_dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/nine_dp"
                                android:layout_marginLeft="@dimen/eighteen_dp"
                                android:layout_marginTop="@dimen/nine_dp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/google_icon" />

                            <EditText
                                android:id="@+id/etEmail"
                                android:layout_width="match_parent"

                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/twenty_five_dp"
                                android:layout_marginRight="@dimen/ten_dp"
                                android:background="@drawable/emp"
                                android:focusableInTouchMode="false"
                                android:gravity="center_vertical"
                                android:hint="email"
                                android:text=""
                                android:textSize="@dimen/fourteen_dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/two_hundred_fifty_dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/fourteen_dp"
                            android:background="@drawable/edit_text_color_pr_strike"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/twenty_five_dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/nine_dp"
                                android:layout_marginLeft="@dimen/eighteen_dp"
                                android:layout_marginTop="@dimen/nine_dp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/keyy"
                                android:tint="?attr/colorPrimary" />

                            <EditText
                                android:id="@+id/etChoiseKey"
                                android:layout_width="match_parent"

                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/twenty_five_dp"
                                android:layout_marginRight="@dimen/ten_dp"
                                android:background="@drawable/emp"
                                android:focusableInTouchMode="false"
                                android:gravity="center_vertical"
                                android:hint="choose key file"
                                android:text=""
                                android:textSize="@dimen/fourteen_dp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/createRoom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/ten_dp"
                            android:gravity="center_horizontal"
                            android:text="Create room"
                            android:textColor="#0397DA"
                            android:textSize="@dimen/sixteen_dp" />

                        <LinearLayout
                            android:layout_width="@dimen/two_hundred_fifty_dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/twelve_dp"
                            android:background="@drawable/edit_text_color_solid"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvSearchRoom"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="@dimen/seven_dp"
                                android:layout_marginTop="@dimen/seven_dp"
                                android:gravity="center"
                                android:text="Open"
                                android:textColor="#fff"
                                android:textSize="@dimen/twenty_dp" />
                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>

</FrameLayout>